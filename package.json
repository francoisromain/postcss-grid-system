{
  "name": "francoisromain.github.io.postcss-grid-system",
  "version": "0.1.0",
  "description": "gh-pages for postcss-grid-system",
  "author": "Francois Romain <francoisromain@gmail.com>",
  "license": "MIT",
  "repository": "francoisromain/postcss-grid-system",
  "scripts": {
    "babel": "babel postcss-grid-system/src --out-dir postcss-grid-system/lib",
    "css-grid-system": "postcss --local-plugins -u ./postcss-grid-system src/grid-system.css -o dist/grid-system.css",
    "css-00": "postcss --local-plugins -u ./postcss-grid-system -i test/src/00.css -o test/dist/00.css",
    "css-01": "postcss --local-plugins -u ./postcss-grid-system -i test/src/01.css -o test/dist/01.css",
    "css-02": "postcss --local-plugins -u ./postcss-grid-system -i test/src/02.css -o test/dist/02.css",
    "css-03": "postcss --local-plugins -u ./postcss-grid-system -i test/src/03.css -o test/dist/03.css",
    "css-05": "postcss --local-plugins -u ./postcss-grid-system -i test/src/05.css -o test/dist/05.css",
    "css-06": "postcss --local-plugins -u ./postcss-grid-system -i test/src/06.css -o test/dist/06.css",
    "build": "npm run babel && npm run css",
    "test": "npm run babel && npm run css-grid-system && npm run css-00 && npm run css-01 && npm run css-02 && npm run css-03&& npm run css-05 && npm run css-06",
    "watch": "onchange 'index.html' 'src/**/*.*' 'postcss-grid-system/src/**/*.*' -- npm run build",
    "reload": "livereload",
    "start": "npm-run-all --parallel watch reload"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "livereload": "^0.4.1",
    "npm-run-all": "^2.0.0",
    "onchange": "^2.4.0",
    "postcss": "^5.0.21",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.5.2",
    "postcss-import": "^8.1.2",
    "system.css": "^0.2.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
