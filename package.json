{
  "name": "francoisromain.github.io.postcss-sstm-grid",
  "version": "0.1.0",
  "scripts": {
    "babel": "babel postcss-sstm-grid/src --out-dir postcss-sstm-grid/lib",
    "css": "postcss --local-plugins -u postcss-import -u postcss-custom-properties -u postcss-calc -u ./postcss-sstm-grid -u postcss-cssnext -i src/styles.css -o dist/styles.css",
    "css-test": "postcss -u postcss-import -u postcss-cssnext -i test/src/styles.css -o test/dist/styles.css",
    "css-system": "postcss -u postcss-import -u postcss-cssnext -i test/src/system.css -o test/dist/system.css",
    "css-00": "postcss --local-plugins -u ./postcss-sstm-grid -i test/src/00.css -o test/dist/00.css",
    "css-01": "postcss --local-plugins -u ./postcss-sstm-grid -i test/src/01.css -o test/dist/01.css",
    "css-02": "postcss --local-plugins -u ./postcss-sstm-grid -i test/src/02.css -o test/dist/02.css",
    "css-03": "postcss --local-plugins -u ./postcss-sstm-grid -i test/src/03.css -o test/dist/03.css",
    "css-04": "postcss --local-plugins -u ./postcss-sstm-grid -i test/src/04.css -o test/dist/04.css",
    "css-05": "postcss --local-plugins -u ./postcss-sstm-grid -i test/src/05.css -o test/dist/05.css",
    "css-06": "postcss --local-plugins -u ./postcss-sstm-grid -i test/src/06.css -o test/dist/06.css",
    "css-07": "postcss --local-plugins -u ./postcss-sstm-grid -i test/src/07.css -o test/dist/07.css",
    "build": "npm run babel && npm run css",
    "test": "npm run babel && npm run css && npm run css-system && npm run css-test && npm run css-00 && npm run css-01 && npm run css-02 && npm run css-03 && npm run css-04 && npm run css-05 && npm run css-06 && npm run css-07",
    "watch": "onchange 'index.html' 'src/**/*.*' 'postcss-sstm-grid/src/**/*.*' -- npm run build",
    "reload": "livereload",
    "start": "npm-run-all --parallel watch reload"
  },
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "livereload": "^0.4.1",
    "npm-run-all": "^1.7.0",
    "onchange": "^2.4.0",
    "postcss": "^5.0.19",
    "postcss-cli": "^2.5.1",
    "postcss-cssnext": "^2.5.2",
    "postcss-import": "^8.1.0",
    "structure.css": "^0.6.6"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
