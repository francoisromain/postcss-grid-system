{
  "name": "francoisromain.github.io.postcss-structure",
  "version": "0.1.0",
  "scripts": {
    "babel": "babel postcss-structure/src --out-dir postcss-structure/lib",
    "css": "postcss --local-plugins -u postcss-import -u postcss-custom-properties -u ./postcss-structure/lib/index.js -u postcss-cssnext -i src/css/styles.css -o dist/css/styles.css",
    "build": "npm run babel && npm run css",
    "watch": "onchange 'index.html' 'postcss-structure/src/**/*.*' -- npm run build",
    "reload": "livereload",
    "start": "npm-run-all --parallel watch reload"
  },
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "livereload": "^0.4.1",
    "npm-run-all": "^1.7.0",
    "onchange": "^2.2.0",
    "postcss": "^5.0.19",
    "postcss-cli": "^2.5.1",
    "postcss-cssnext": "^2.5.2",
    "postcss-import": "^8.1.0",
    "postcss-structure": "0.3.0",
    "structure.css": "^0.4.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
